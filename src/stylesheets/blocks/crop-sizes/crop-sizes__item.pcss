.crop-sizes__item {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;

  padding: 0;
  height: 65px;

  background: transparent;
  border-color: transparent;
  color: var(--color-base);
  cursor: pointer;
  
  &:hover,
  &:focus {
    background: transparent;
    border-color: transparent;
    color: var(--color-primary);
  }

  &:active {
    background: transparent;
    border-color: transparent;
    color: var(--color-primary-dark);
  }

  &:disabled,
  &[aria-disabled=true] {
    border-color: transparent !important;
  }
}

.crop-sizes__item::after {
  content: attr(data-caption);

  display: block;

  font-size: 14px;
  line-height: 25px;
  @media (max-width: 400px), (max-width: 600px) and (orientation: landscape) {
    font-size: 12px;
  }
}

.crop-sizes__item::before {
  content: '';
  display: block;

  order: 1;

  margin: 1px 0;
  width: 6px;
  height: 6px;

  background: transparent;
  border-radius: 50%;
}
